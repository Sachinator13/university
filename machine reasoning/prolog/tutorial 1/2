parent(X, Y):-
    father(X,Y);mother(X,Y).

man(X):-
    male(X).

woman(X):-
    female(X).
    
marriage(X,Y):-
    married(X,Y).

siblings(X,Y):-
    parent(Z,X),
    parent(Z,Y),
    dif(X,Y).

brother(X,Y):-
    siblings(X,Y),
    male(Y).

sister(X,Y):-
    siblings(X,Y),
    female(Y).
    
grandparent(X,Y):-
    parent(Z,X),
    parent(Y,Z).

grandmother(X,Y):-
    grandparent(X,Y),
    female(Y).

grandfather(X,Y):-
    grandparent(X,Y),
    male(Y).




